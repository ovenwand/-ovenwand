{
  "extends": "@tsconfig/svelte/tsconfig.json",

  "compilerOptions": {
    "resolveJsonModule": true,
    "declaration": true,
    "strict": true,

    "lib": [
      "dom",
      "es2017"
    ],
    "types": [
      "mocha"
    ]
  },

  "allowTsInNodeModules": true,

  "include": [
    "src/**/*"
  ],

  "exclude": [
    "node_modules",
    "dist"
  ]
}